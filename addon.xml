<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon
	id="service.LanguagePreferenceManager"
	name="Language Preference Manager"
	version="0.0.1"
	provider-name="ace20022"
	>
	<requires>
		<import addon="xbmc.python" version="2.0"/>
	</requires>
	<extension point="xbmc.python.script" library="default.py">
		<provides>executable</provides>
	</extension>
  	<extension point="xbmc.service" library="default.py" start="login"/>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Sets the audio and subtitle language according to your preferences</summary>
		<description lang="en"></description>
		<disclaimer lang="en">For bugs, requests or general questions visit the Language Preference Manager thread on the XBMC forum.</disclaimer>
		<platform>all</platform>
	</extension>
</addon>
